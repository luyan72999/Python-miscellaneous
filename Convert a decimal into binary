def main():

    decimal = int(input("please enter an integer: "))
    reminders = []
    reminder = decimal % 2
    quotient = int(decimal / 2)

    while decimal != 0 :
        reminders.append(reminder)
        decimal = quotient
        reminder = decimal % 2
        quotient = int(decimal / 2)
       

    print(reminders)
    
main()
